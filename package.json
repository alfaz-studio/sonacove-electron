{
  "name": "sonacove-meets",
  "productName": "Sonacove Meet",  
  "version": "1.0.2",
  "description": "Sonacove Meeting App",
  "main": "main.js",
  "author": "Alfaz Studio",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alfaz-studio/sonacove-electron.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "deploy": "electron-builder --publish always"
  },
  "build": {
    "appId": "com.sonacove.meet",
    "directories": {
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "alfaz-studio",
        "repo": "sonacove-electron"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2"
  }
}

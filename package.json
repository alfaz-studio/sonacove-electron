{
  "name": "sonacove-meets",
  "productName": "Sonacove Meet",
  "version": "1.0.6",
  "description": "Sonacove Meeting App",
  "main": "main.js",
  "author": "Alfaz Studio",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alfaz-studio/sonacove-electron.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:staging": "electron-builder --config.extraMetadata.appEnv=staging",
    "build:prod": "electron-builder --config.extraMetadata.appEnv=production",
    "deploy": "electron-builder --config.extraMetadata.appEnv=staging --publish always"
  },
  "build": {
    "appId": "com.sonacove.meet",
    "directories": {
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "alfaz-studio",
        "repo": "sonacove-electron",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Setup.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "artifactName": "${productName}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "protocols": [
      {
        "name": "Sonacove Meet Protocol",
        "schemes": [
          "sonacove"
        ]
      }
    ]
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2"
  }
}
